<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="3dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha=".10"
            android:scaleType="fitXY"
            android:src="@drawable/re_bg" />

        <RelativeLayout
            android:id="@+id/relativelaout_himalayan"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="25dp"
                android:elevation="1.5dp">

                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/youtubeicon" />

                <TextView
                    android:id="@+id/textView_reveal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/imageview1"
                    android:layout_toRightOf="@+id/imageview1"
                    android:text="The reveal of Himalayan"
                    android:textColor="#6C2D27"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView_reveal"
                    android:layout_alignStart="@+id/textView_reveal"
                    android:layout_below="@+id/textView_reveal"
                    android:text="Check out the video"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="15dp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/relativeLayout1"
                android:layout_alignLeft="@+id/relativeLayout1"
                android:layout_alignRight="@+id/relativeLayout1"
                android:layout_alignStart="@+id/relativeLayout1"
                android:layout_below="@id/relativeLayout1"
                android:layout_marginTop="15dp"
                android:elevation="1.5dp">

                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/youtubeicon" />

                <TextView
                    android:id="@+id/textView_specs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/imageview2"
                    android:layout_toRightOf="@+id/imageview2"
                    android:text="Himalayan First Look"
                    android:textColor="#6C2D27"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_message1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView_specs"
                    android:layout_alignStart="@+id/textView_specs"
                    android:layout_below="@+id/textView_specs"
                    android:text="Check out the video"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="15dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="15dp">

                <ExpandableListView
                    android:id="@+id/expandableListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.1dp"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                    android:padding="5dp" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>