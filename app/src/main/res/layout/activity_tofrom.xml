<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:alpha=".15"
            android:scaleType="fitXY"
            android:src="@drawable/re_bg" />


        <GridLayout
            android:id="@+id/gridlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:columnCount="2">

            <TextView
                android:id="@+id/FromTextView"
                style="@style/DetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:text="@string/From" />


            <TextView
                android:id="@+id/ToTextView"
                style="@style/DetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:text="@string/To" />


            <EditText
                android:id="@+id/FromEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:gravity="left"
                android:hint="@string/FromHint"
                android:inputType="textAutoCorrect"
                android:singleLine="true" />

            <EditText
                android:id="@+id/ToEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:gravity="left"
                android:hint="@string/ToHint"
                android:inputType="textAutoCorrect"
                android:singleLine="true" />

        </GridLayout>

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridlayout1"
            android:layout_marginTop="5dp">

            <CheckBox
                android:id="@+id/checkBox"
                style="@style/SubText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/CheckboxText" />

            <Button
                android:id="@+id/buttonGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/ButtonFetch"
                android:textColor="#808080"
                android:textSize="20dp"
                android:textStyle="bold|normal" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout1"
            android:layout_marginTop="5dp">

            <View
                android:id="@+id/view"
                style="@style/view"

                android:layout_centerHorizontal="true" />

            <ListView
                android:id="@+id/listview_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginTop="3dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout2"
            android:layout_marginTop="5dp">

            <TextView style="@style/DetailText"
                android:id="@+id/textview_detail"/>
        </RelativeLayout>


    </RelativeLayout>

</ScrollView>