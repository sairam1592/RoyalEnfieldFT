<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/re_bg"
        android:scaleType="fitXY"
        android:alpha=".20"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout1"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:id="@+id/gridlayout1">

            <TextView
                style="@style/DetailText"
                android:id="@+id/UsernameTextView"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:text="Username" />


            <TextView
                style="@style/DetailText"
                android:id="@+id/BullTypeTextView"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:text="Bull Type" />


            <TextView
                style="@style/DetailText"
                android:id="@+id/MileageTextView"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:text="Mileage" />

            <TextView
                style="@style/DetailText"
                android:id="@+id/FuelCosrTextView"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:text="Fuel Cost " />

            <TextView
                style="@style/DetailText"
                android:id="@+id/MailTextView"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:text="Email id " />

            <EditText
                android:id="@+id/UserNameEditText"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Username"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/BullTypeSpinner"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true" />

            <EditText
                android:id="@+id/MileageEditText"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Mileage (approx)"
                android:inputType="number"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/FuelCostSpinner"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Fuel cost per liter"
                android:singleLine="true" />

            <EditText
                android:id="@+id/MailEditText"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Mail id"
                android:singleLine="true" />
        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonText"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textColor="#808080"
            android:textSize="20dp"
            android:textStyle="bold|normal"
            android:layout_below="@+id/gridlayout1"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>