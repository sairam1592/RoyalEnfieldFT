<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_img"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/maps" />


        <RelativeLayout
            android:id="@+id/relativelayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_img"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView_img"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView_fromlabel"
                style="@style/MapText"
                android:text="From:" />

            <TextView
                android:id="@+id/textView_from"
                style="@style/MapText"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView_id"
                android:layout_toRightOf="@+id/textView_fromlabel"
                android:layout_toStartOf="@+id/textView_id"
                android:text="@string/sample_text" />

            <TextView
                android:id="@+id/textView_tolabel"
                style="@style/MapText"
                android:layout_below="@+id/textView_fromlabel"
                android:text="To:" />

            <TextView
                android:id="@+id/textView_to"
                style="@style/MapText"
                android:layout_alignEnd="@+id/textView_from"
                android:layout_alignRight="@+id/textView_from"
                android:layout_below="@+id/textView_fromlabel"
                android:layout_toEndOf="@+id/textView_fromlabel"
                android:layout_toRightOf="@+id/textView_fromlabel"
                android:text="@string/sample_text" />

            <TextView
                android:id="@+id/textView_distlabel"
                style="@style/MapText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView_to"
                android:layout_toLeftOf="@+id/textView_to"
                android:layout_toStartOf="@+id/textView_to"
                android:text="Dist:" />


            <TextView
                android:id="@+id/textView_distdur"
                style="@style/MapSubText"
                android:layout_alignBottom="@+id/textView_distlabel"
                android:layout_alignEnd="@+id/textView_to"
                android:layout_alignRight="@+id/textView_to"
                android:layout_toRightOf="@+id/textView_fromlabel"
                android:text="Distdur" />

            <TextView
                android:id="@+id/textView_durlabel"
                style="@style/MapText"
                android:layout_below="@+id/textView_distlabel"
                android:text="Time:" />

            <TextView
                android:id="@+id/textView_duration"
                style="@style/MapSubText"
                android:layout_alignBottom="@+id/textView_durlabel"
                android:layout_alignEnd="@+id/textView_distdur"
                android:layout_alignRight="@+id/textView_distdur"
                android:layout_toRightOf="@+id/textView_durlabel"
                android:text="duration" />

            <TextView
                style="@style/MapSubText"
                android:id="@+id/textView_id"
                android:text="id"
                android:visibility="invisible"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignTop="@+id/textView_duration"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>

