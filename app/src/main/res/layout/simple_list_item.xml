<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView_img"
        android:layout_width="75dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView_bikeName"
        style="@style/bikeName"
        android:layout_alignEnd="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/view"
        android:layout_toEndOf="@+id/imageView_img"
        android:layout_toRightOf="@+id/imageView_img"
        android:text="@string/sample_text" />

    <View
        android:id="@+id/view"
        style="@style/viewlist"
        android:layout_alignBottom="@+id/textView_price"
        android:layout_below="@+id/textView_price"
        android:layout_toEndOf="@+id/imageView_img"
        android:layout_toRightOf="@+id/imageView_img" />

    <TextView
        android:id="@+id/textView_category"
        style="@style/SubText"
        android:layout_alignEnd="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_below="@+id/textView_bikeName"
        android:layout_toEndOf="@+id/imageView_img"
        android:layout_toRightOf="@+id/imageView_img"
        android:text="@string/sample_text" />

    <TextView
        android:id="@+id/textView_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/button_grey"
        android:textSize="11dp"
        android:layout_alignTop="@+id/textView_category"
        android:layout_alignRight="@+id/textView_category"
        android:layout_alignEnd="@+id/textView_category" />

</RelativeLayout>