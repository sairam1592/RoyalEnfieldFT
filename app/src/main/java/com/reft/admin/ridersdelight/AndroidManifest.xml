<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reft.admin.ridersdelight">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logomain"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.reft.admin.ridersdelight.misc.SplashScreen"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.reft.admin.ridersdelight.NavMainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.reft.admin.ridersdelight.BikeList.BikeViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/page_bike"></activity>
        <activity
            android:name="com.reft.admin.ridersdelight.History.HistoryActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/history"></activity>
        <activity
            android:name="com.reft.admin.ridersdelight.fragments.PersonalDetailsFragment"
            android:configChanges="orientation|screenSize"
            android:label="@string/PersonalDetails"></activity>
        <activity
            android:name="com.reft.admin.ridersdelight.fragments.PlanTripDetails"
            android:configChanges="orientation|screenSize"
            android:label="@string/plan"></activity>
        <activity
            android:name="com.reft.admin.ridersdelight.fragments.ViewTripDetails"
            android:configChanges="orientation|screenSize"
            android:label="@string/view"></activity>
        <activity
            android:name="com.reft.admin.ridersdelight.fragments.ViewAllActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/viewAll"></activity>
        <activity
            android:name="com.reft.admin.ridersdelight.fragments.SpecsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/techspec"></activity>

    </application>

</manifest>